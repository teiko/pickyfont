use strict;
use Picky::Fonts qw(getfonts setfont);

my $action = shift;
my $arg    = shift;

my $opts = {
  list  => sub {getfonts();exit 0;},
  set   => sub {setfont($arg); exit 0;},
};

$opts->{list}->() if !$action;

defined $opts->{$action} && $opts->{$action}->()
  or usage();

sub usage {
  print << "USAGE";
  $APP $VERSION
  USAGE: $0 OPTIONS

  OPTIONS
    list  list available fonts
    set   set font
USAGE
  exit 0;
}
